<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>FMC Webshop</title>
    <link href="~/StaticFiles/StyleSheets/layoutStyleSheet.css" rel="stylesheet" />
</head>
<body>
    
        <header class="pageHead">
            <a asp-controller="Home" asp-action="Index">
                <div class="topHead">
                    <div id="logo"></div>
                    <div id="searchBar"></div>
                </div>
            </a>

            <div class="menuBar">

                <ul id="menuList">

                    <li id="skorMenuLi"><a>SKOR &#x25BE;</a></li>
                    <li id="varumarkenMenuLi"><a>VARUMÄRKEN &#x25BE;</a></li>
                    <li id="accessoarerMenuLi"><a>ACCESSOARER &#x25BE;</a></li>
                    <li><a asp-controller="Home" asp-action="Guide">GUIDE</a></li>
                    <li><a href="http://www.dinsko.se/">REA</a></li>

                </ul>

                <div id="menuIcons">
                    <img id="userLogo" src="~/StaticFiles/Pics/Layout/userLogo.png" />
                    <img id="cartLogo" src="~/StaticFiles/Pics/Layout/cartLogo.png" />
                    <div id="cartCount"></div>
                </div>

            </div>

        </header>

        <div class="dropDownMenu">

        </div>

        <div class="userAndCartDiv">

        </div>

        <div class="wrapper">
            @RenderBody()
        </div>
    
    <footer class="pageFoot">
        <div class="infoFoot">
            <table class="footTable">
                
                <tr>
                    <th><a asp-controller="CustomerSupport" asp-action="Index" class="custServiceA">KUNDSERVICE</a></th>
                    <th>INFORMATION</th>
                </tr>
                <tr>
                    @*<td><a asp-controller="CustomerSupport" asp-action="CustomerSupport" asp-route-option=1>Kontakta oss</a></td>*@
                    <td>Kontakta oss</td>
                    <td>Om oss</td>
                </tr>
                <tr>
                    <td>Retur & Byten</td>
                    <td>Leverans</td>
                </tr>
                <tr>
                    <td>Registrera dig</td>
                    <td>Köpvillkor</td>
                </tr>
            </table>
        </div>




        <div class="copyFoot">&copy; FMC 2017 | Cookies | Sekretesspolicy | Regler & Vilkor | Ansvarig utgivare</div>
    </footer>

    <script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/StaticFiles/Scripts/JS/mainScript.js"></script>
</body>
</html>
