@model MyShoppingCartVM

<div class="displayingProductsDiv">

    @if (Model.Products != null)
    {


        @foreach (var item in Model.Products)
        {
            <span id="cartPictureSpan"><img src="~/StaticFiles/@item.ImgPath" /></span>
            <span id="cartProductBrand">@item.Brand</span>
            <span id="cartProductModel">@item.Model</span>
            <span id="cartProductPrice">@item.Price</span>
            <span id="cartProductColor">@item.Color</span>
            <span id="cartNumberOfSame"><span>x</span>@item.NumberOfSameArticle</span>
            <div class="cartEditButtons">
                <div id="cartRemoveProductBtn"><a asp-controller="Order" asp-action="EditProduct" asp-route-artNr="@item.ArticleNrShort" asp-route-size="@item.Size" asp-route-plusOrMinus="1">-</a></div>
                <div id="cartRemoveProductBtn"><a asp-controller="Order" asp-action="EditProduct" asp-route-artNr="@item.ArticleNrShort" asp-route-size="@item.Size" asp-route-plusOrMinus="2">+</a></div>
                <div id="cartRemoveProductBtn"><a asp-controller="Order" asp-action="RemoveProduct" asp-route-artNr="@item.ArticleNrShort" asp-route-size="@item.Size">x</a></div>
            </div><br />
            <span id="cartArticleNum">@item.ArticleNrShort</span>
            <br />
        }
    }
</div>

<div class="cartOptionsDiv">
    <a asp-controller="Home" asp-action="Index">Fortsätt handla</a>

    @if (Model.IsLoggedIn)
    {
        <a asp-controller="Order" asp-action="CheckOut" class="toCheckOutFakeBtn">Gå vidare</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Register">Bli medlem</a><br />
        <a asp-controller="Account" asp-action="Login">Redan medlem? Logga in</a><br />
        <a asp-controller="Order" asp-action="CheckOut">Gå vidare utan att logga in</a><br />
    }
</div>